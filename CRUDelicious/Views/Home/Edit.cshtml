@using CRUDelicious.Models;
@model Dish
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add A Dish</title>
</head>
<body>
    <a href="/">Home</a>
    <form asp-action="Update" asp-controller= "Home" method="POST" asp-route-dishId="@Model.DishId">
    <div class="form-group">
        <span asp-validation-for="Chef"></span>
        <label asp-for="Chef">Chef's Name</label>
        <input type="text" asp-for="Chef">
    </div>
    <div class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name">Name of Dish</label>
        <input type="text" asp-for="Name">
    </div>
    <div class="form-group">
        <span asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness">
        @for(var tasty = 1; tasty <= 5; tasty++)
        {
            if(tasty == 5)
            {
                <option selected value="@tasty">@tasty</option>
            }
            else
            {
                <option value="@tasty">@tasty</option>
            }
        }
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Calories"></span>
        <label asp-for="Calories">Number of Calories</label>
        <input type="number" asp-for="Calories">
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" name="Description" id="Description" cols="30" rows="10"></textarea>
    </div>

    <input type="submit" value="Edit Dish">
</form>
</body>
</html>